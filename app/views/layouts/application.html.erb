<!DOCTYPE html>
<html>
<head>
  <title>RailsTestTwitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to 'Mi Twitter', root_path, class: 'navbar-brand' %>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <% if user_signed_in? %>

                  <li><%= link_to 'Tweetear!', new_tweet_path %></li>
                  <li><%= link_to 'Salir', destroy_user_session_path, method: :delete %></li>

                <% else %>

                  <li><%= link_to 'Ingresar', user_session_path %></li>

                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
